<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

    <h1>Test !</h1>

    {# Création de variable + affichage #}
    {% set name = "Sylvain" %}
    <h2>{{ name }}</h2>

    {# utilisation de tableau #}
    {% set colors = ["blue", "red", "pink", "purple", "yellow"] %}

    {% for color in colors %}
        <div style="background-color: {{ color }}">{{ color }}</div>
    {% endfor %}

    {# utilisation d'objet #}
    {% set serie = {
        name : "Breaking Bad",
        genre : "Drama",
        year : 2012
    } %}

    <h3>Nom de la série : {{ serie.name }}</h3>
    <h3>Genre : {{ serie.genre }}</h3>
    <h3>Année : {{ serie.year }}</h3>

</body>
</html>